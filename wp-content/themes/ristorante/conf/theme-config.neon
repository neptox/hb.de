appearance:
	title:     Appearance Settings
	menu-title: Appearance
	tabs:
		colors:
			title:     Colors
			tab-title: Colors
			less: true
			options:
				Background: section
				#################
				htmlBgColor:
					label: Color
					type: colorpicker
					default: '#222222'
					themebox: { label: Website Background, page: all }
				htmlBg:
					label: Image
					type: image-url
					default: ''
					# themebox: {
					# 	label: Website Background,
					# 	page: all,
					# 	{title: Floral, img: design/img/patterns/floral.png, repeat: repeat, x: left, y: top, attach: scroll}
					# 	{title: Sand, img: design/img/patterns/sand.png, repeat: repeat, x: left, y: top, attach: scroll}
					# 	{title: Wood, img: design/img/patterns/wood.png, repeat: repeat, x: left, y: top, attach: scroll}
					# 	{title: Background Bubbles, img: design/img/patterns/bubbles.jpg, repeat: no-repeat, x: center, y: top, attach: fixed}
					# 	{title: Background Gold-Rock, img: design/img/patterns/gold-rock.jpg, repeat: repeat-x, x: center, y: top, attach: fixed}
					# 	{title: Background Green-Lights, img: design/img/patterns/green-lights.jpg, repeat: repeat-x, x: center, y: top, attach: scroll}
					# }
				linesColor:
					label: Lines Color
					type: colorpicker
					default: '#989796'
					themebox: { label: Lines Color, page: all }
				htmlBgY:
					label: Vertical Position
					type: select
					default: {
						top: {
							label: Top
							checked: true
						},
						center: {
							label: Center
						},
						bottom: {
							label: Bottom
						}
					}
				htmlBgX:
					label: Horizontal Position
					type: select
					default: {
						left: {
							label: Left
							checked: true
						},
						center: {
							label: Center
						},
						right: {
							label: Right
						}
					}
				htmlBgRepeat:
					label: Repeat
					type: select
					default: {
						no-repeat: {
							label: No Repeat
						},
						repeat: {
							label: Repeat
						},
						repeat-x: {
							label: Repeat X
						},
						repeat-y: {
							label: Repeat Y
						}
					}
				htmlBgAttach:
					label: Attachment
					type: select
					default: {
						scroll: {
							label: Scroll
						},
						fixed: {
							label: Fixed
						}
					}
				Main Colors: section
				#################
				headerBgColor:
					label: Header Color
					type: transparent
					color: '#464646'
					opacity: '0.6'
					themebox: { label: Header Color, page: all }
				contentBgColor:
					label: Content Color
					type: transparent
					color: '#ffffff'
					opacity: '0.8'
					themebox: { label: Content Color, page: all }
				popupBgColor:
					label: Popup Color
					type: transparent
					color: '#9c9c9c'
					opacity: '0.9'
					themebox: { label: Popup Color, page: all }
				decorColor:
					label: Decoration Color
					type: colorpicker
					default: '#d30000'
					themebox: { label: Decoration Color, page: all }
		fonts:
			title:     Fonts
			tab-title: Fonts
			less: true
			options:
				Font family for titles and menu: section
				####################
				fancyFont:
					label: Titles and Menu Font
					type: font
					default: 'Swiss721 Cn'
					themebox: {label: Titles & Menu font, page: all}
				Font colors: section
				#################
				titlesFontColor:
					label:  Titles Font Color
					type: colorpicker
					default: '#444444'
					themebox: {label: Titles Font, page: all}
				generalFontColor:
					label:  General Text Color
					type: colorpicker
					default: '#666666'
					themebox: {label: General Font Color, page: all}
				headerFontColor:
					label: Header Font Color
					type: colorpicker
					default: '#ffffff'
					themebox: {label: Header Font Color, page: all}
				linksFontColor:
					label: Links Font Color
					type: colorpicker
					default: '#0e97e6'
					themebox: {label: Links Font, page: all}
		customCss:
			title: Custom CSS
			tab-title: Custom CSS
			options:
				Your custom CSS: section
				########################
				customCss:
					type: custom-css
					default: '/* your custom CSS in LESS syntax */'
				LESS variables for images: section
				########################
				customImages:
					type: custom-css-vars
					skinable: true
					default: [
						[
							variable: {
								label: Image name
								type: text
							},
							value: {
								label: Image
								type: image-url
							}
						]
					]