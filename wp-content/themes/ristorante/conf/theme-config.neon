generalOptions:
	title: General Settings
	menu-title: General Settings
	tabs:
		general:
			title:     General Setting
			tab-title: General
			options:
				Site Info: section
				#################
				logo_text:
					label: Logo text
					type: text
					default: 'Call (800) 631-258-000<br>James street 237/B, Dublin, Ireland<br>mail: office@mail.com'
				logo_img:
					label: Logo image
					type: image-url
					default: 'design/img/logo.png'
					skinable: false
				Google Codes: section
				#################
				ga_code:
					label: Google Analytics Tracking Code
					type: text
		globals:
			title:     Globals
			tab-title: Globals
			less: true
			options:
				Header Appeareance - Global Settings : section
				#################
				headerType:
					label: "Background Appearence"
					type: select
					default: {
						slider: {
							label: 'Slider'
						},
						none: {
							label: 'Image from Appearance section'
						}
					}
				Slider Appereance - Global Settings : section
				#################
				sliderDelay:
					label: 'Slide Delay'
					type: text
					help: 'Slider delay must be bigger than Animation time'
					default: 3000
				sliderAnimTime:
					label: 'Animation time'
					type: text
					default: 600
				sliderCat:
					label: Slider Category
					type: dropdown-categories
					default: 'slider-creator'
				Menu Appearance - Global Settings : section
				#################
				mainmenu_dropdown_time:
					label: "Dropdown Animation Time ms"
					type: text
					default: 200
				mainmenu_dropdown_animation:
					label: "Dropdown Animation Easing"
					type: select
					default: {
						swing: {
							label: Default
							checked: true
						},
						easeOutBounce: {
							label: easeOutBounce
						},
						easeOutElastic: {
							label: easeOutElastic
						},
						easeOutBack: {
							label: easeOutBack
						}
					}
		searchConfig:
			title:     Editable Type
			tab-title: Editable Type
			less: true
			options:
				Editable Type: section
				#######################
				editableTypeName:
					label: Displayed Name
					type: text
					default: "Event"
					help: 'This name must be in a singular'
				editableTypeDisplay:
					label: Show this type
					type: checkbox
					default:
						enable:
							label: 'Yes'
							checked: true
				Menu Type: section
				#######################
				menuTypeName:
					label: Displayed Name
					type: text
					default: "Menu"
					help: 'This name must be in a singular'
				menuTypeDisplay:
					label: Show Menu type
					type: checkbox
					default:
						enable:
							label: 'Yes'
							checked: true
		socialIcons:
			title: Social icons
			tab-title: Social icons
